---
export const prerender = true

import { getArticle } from '../services/microcms'
import Layout from '../layouts/Layout.astro'
import Post from '../components/Post.astro'

// トップページ
const article = await getArticle(import.meta.env.MICROCMS_TOPPAGE_ID)
---

<Layout title={article.title} category={article.category.name}>
  <Post title={article.title} content={article.content} />
</Layout>
